{% extends 'base.jinja' %}
{% import 'ads.jinja' as ads %}

{% block content %}
  <section class="terminal-like">
    <div class="columns">
      <div class="main terminal-box">
        <div class="info">
          <comment>
            <b>Note:</b> help and version output are generated by a na√Øve script which tries a few variants of
            <i>&lt;command&gt; --help</i>, <i>&lt;command&gt; -h</i> etc. to find the command&#39;s help and version info.
            Sometimes it gets lucky, sometimes it doesn't; if the output below looks wrong, it probably is.
          </comment>
        </div>

        {% if version_msg %}
        <div>
          <h3>{{ name }} {{ version_arg }} (return code: {{ version_returncode }})</h3>

          <div class="white-space">{{ version_msg }}</div>
        </div>
        {% endif %}

        <div>
          <h3>{{ name }} {{ help_arg }} (return code: {{ help_returncode }})</h3>

          <div class="white-space">{{ help_msg|safe }}</div>
        </div>
      </div>

      <div class="sidebar">
        <div class="terminal-box">
          {% if installed_via %}
            <h5>Installed via</h5>
            <div>
              <a href="{{ installed_via.uri|to_uri }}">{{ installed_via.name }}</a>
            </div>
          {% endif %}
          <h5>Path</h5>
          <div>
            {{ path }}
          </div>
        </div>
        {{ ads.sidebar() }}
      </div>
    </div>
  </section>
{% endblock %}
