{% extends 'base.jinja' %}

{% block content %}
  <h1>{{ name }}</h1>
  <p class="lead">
    {{ description }}
  </p>
  <div>
    <h2>GNU man page</h2>
    <div class="row">
      {% for label, value in details %}
        <div class="col-md-6">
          <div class="terminal-like detail">
            <h5>{{ label|safe }}</h5>
            <div class="value">{{ value }}</div>
          </div>
        </div>
        {% if loop.index is even %}
          </div><div class="row">
        {% endif %}
      {% endfor %}
    </div>
    {% if man_comments %}
      <section id="man-comments" class="terminal-like">
        <h3>Head comments</h3>
        <pre class="no-pad">{{ man_comments }}</pre>
      </section>
    {% endif %}
    <section id="man-page" class="terminal-like">
    <h3>{{ name }} ({{ man_id }})</h3>
      <!-- man page content { -->
      {{ content|safe }}
      <!-- } end of man page content -->
    </section>
  </div>
{#  {{ debug() }}#}
{% endblock %}
